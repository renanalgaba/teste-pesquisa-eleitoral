<!-- src/views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard de Pesquisa Eleitoral</title>
</head>
<body>
    <h1>Resultados da Pesquisa</h1>
    <ul>
        <% if (resultados && Object.keys(resultados).length > 0) { %>
            <% for (const [candidato, votos] of Object.entries(resultados)) { %>
                <li>Candidato <%= candidato %>: <%= votos %> votos ponderados</li>
            <% } %>
        <% } else { %>
            <li>Nenhum resultado encontrado.</li>
        <% } %>
    </ul>
</body>
</html>